
<body>

<% if @loans.present? %>
  <h5 class="mt-3 mb-4">Loans</h5>

  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>City</th>
        <th>Purpose</th>
        <th>Amount</th>
        <th>Profession</th>
        <th>Income</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |loan| %>
        <tr>
          <td style="text-align:center;"><%= loan.name + ' ' + loan.lastName %></td>
          <td style="text-align:center;"><%= loan.email_address %></td>
          <td style="text-align:center;"><%= loan.phonenumber %></td>
          <td style="text-align:center;"><%= loan.Address %></td>
          <td style="text-align:center;"><%= loan.city %></td>
          <td style="text-align:center;"><%= loan.purpose %></td>
          <td class="text-right" style="text-align: right;"><%= loan.amount %></td>
          <td style="text-align:center;"><%= loan.jobtitle %></td>
          <td class="text-right" style="text-align: right;"><%= loan.income  %></td>
          <td>
            <div class="button-container">
              <%= link_to loan_path(loan), class: 'btn btn-primary btn-action' do %>
                <i class="fas fa-eye"></i> 
              <% end %>
              <%= link_to edit_loan_path(loan), class: 'btn btn-warning btn-action' do %>
                <i class="fas fa-edit"></i> 
              <% end %>
              <%= button_to loan_path(loan), method: :delete, class: 'btn btn-danger btn-action', onclick: "confirmDelete(event);" do %>
                <i class="fas fa-trash-alt"></i> 
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-records">
    <h5>Oops! No records found.</h5>
    <p class="appealing-message">Looks like there are no loans to display at the moment. Don't worry, you can always add a new one!</p>
  </div>
<% end %>

<script>
  function confirmDelete(event) {
    if (!confirm('Are you sure you want to delete?')) {
      event.preventDefault();
    }
  }
</script>

<!-- Add Bootstrap JS and Popper.js if needed -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
