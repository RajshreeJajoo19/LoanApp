
<body>

  <div class="container">
    <h5> <center>  Create a new Loan Application  </center></h5> <br>

    <%= form_with(model: @loan, url: loans_path, class: 'loan-form', data: { remote: true }, method: 'post') do |form| %>

    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', id: 'name', placeholder: 'Enter your name' %>
    </div>

    <div class="mb-3">
      <%= form.label :purpose, class: 'form-label' %>
      <%= form.select :purpose, options_for_select([
        ['Select', nil],  
        ['Medical Expenses', 'Medical Expenses'],
        ['Gold', 'Gold'],
        ['Education', 'Education'],
        ['Home', 'Home'],
        ['Vehicle', 'Vehicle']
      ]), { class: 'form-select' } %>
    </div>

    <div class="mb-3">
      <%= form.label :amount, class: 'form-label' %>
      <%= form.text_field :amount, class: 'form-control', id: 'user_amount', placeholder: '$10,000', oninput: "maskincome(this)" %>
    </div>

    <div class="mb-3">
      <%= form.label :ssn, class: 'form-label' %><br>
      <%= form.text_field :ssn, class: 'form-control', placeholder: 'xxx-xx-xxxx', id: 'user_ssn', oninput: "maskssn(this)"%>
    </div>

    <div class="mb-3">
      <%= form.label :email_address, class: 'form-label' %>
      <%= form.text_field :email_address, type: 'email', class: 'form-control', id: 'email_address', placeholder: 'name@example.com' %>
    </div>

    <div class="mb-3">
      <%= form.label :income, class: 'form-label' %>
      <%= form.text_field :income, class: 'form-control', id: 'user_income', placeholder: '$10,000', oninput: "maskincome(this)" %>
    </div>

    <div class="mb-3">
      <%= form.label :phonenumber, class: 'form-label' %>
      <%= form.text_field :phonenumber, class: 'form-control', id: 'phonenumber', placeholder: '555-555-5555', oninput: "maskPhoneNumber(this)" %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Submit Loan Application', class: 'btn btn-primary' %>
    </div>

    <% end %>

  </div>


  <script>
    function maskssn(input) {
      let ssn = document.getElementById('user_ssn');
      // SSN masking
      ssn.addEventListener('input', function () {
        let inputValue = ssn.value.replace(/\D/g, ''); // Remove non-numeric characters
        let formattedValue = '';
        if (inputValue.length > 0) {
          // Adjusted regex and substring for xxx-xx-xxxx format
          formattedValue = inputValue.match(/(\d{0,3})(\d{0,2})(\d{0,4})/).slice(1, 4).filter(Boolean).join('-');
        }
        ssn.value = formattedValue;
      });
    }

    // masking input
    function maskincome(input) {
      var value = input.value.replace(/[^0-9.]/g, '');
      value = '$' + value;
      var parts = value.split('.');
      if (parts.length > 1) {
        value = parts[0] + '.' + parts[1].slice(0, 2);
      }
      input.value = value;
    }

    function maskPhoneNumber(input) {
      var value = input.value.replace(/\D/g, '');
      if (value.length > 6) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6) + '-' + value.slice(6, 10);
      } else if (value.length > 3) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6);
      }
      input.value = value;
    }

  </script>
</body>

</html>
