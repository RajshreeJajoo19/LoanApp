<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Loan Application</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 20px;
    }

    .container {
      max-width: 800px;
    }

    h2 {
      color: #333;
      margin-bottom: 20px;
    }

    .loan-form {
      max-width: 400px;
      margin: 0 auto;
    }

    .editformfields {
      padding: 20px;
      margin-top: 20px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .field {
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: bold;
    }

    .form-input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }

    .submit-button {
      background-color: #4caf50;
      color: white;
      padding: 10px 15px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .submit-button:hover {
      background-color: #45a049;
    }

    .logo {
      max-width: 100px;
      margin-right: 15px;
    }
  </style>
</head>

<body>

  <div class="container"> <br>
    

    <h5>  <center> Edit Loan Application </center>  </h5><br>

    <% if @loan.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @loan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_with(model: @loan, local: true, class: 'loan-form') do |form| %>

    <div class="editformfields">

      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', id: 'name', placeholder: 'Name' %>
      </div>

      <div class="form-group">
        <%= form.label :purpose, class: 'form-label' %>
        <%= form.select :purpose, options_for_select([
          ['Select', nil],  
          ['Medical Expenses', 'Medical Expenses'],
          ['Gold', 'Gold'],
          ['Education', 'Education'],
          ['Home', 'Home'],
          ['Vehicle', 'Vehicle']
        ], selected: @loan.purpose), { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.label :amount, class: 'form-label' %>
        <%= form.text_field :amount, class: 'form-control', id: 'user_amount', placeholder: '$10,000', oninput: "maskincome(this)" %>
      </div>

      <div class="form-group">
        <%= form.label :ssn, class: 'form-label' %>
        <%= form.text_field :ssn, class: 'form-control', placeholder: 'xxx-xx-xxxx', id: 'user_ssn', oninput: "maskssn(this)" %>
      </div>

      <div class="form-group">
        <%= form.label :email_address, class: 'form-label' %>
        <%= form.text_field :email_address, type: 'email', class: 'form-control', id: 'email_address', placeholder: 'name@example.com' %>
      </div>

      <div class="form-group">
        <%= form.label :income, class: 'form-label' %>
        <%= form.text_field :income, class: 'form-control', id: 'user_income', placeholder: '$10,000', oninput: "maskincome(this)" %>
      </div>

      <div class="form-group">
        <%= form.label :phonenumber, class: 'form-label' %>
        <%= form.text_field :phonenumber, class: 'form-control', id: 'phonenumber', placeholder: '555-555-5555', oninput: "maskPhoneNumber(this)" %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit Loan Application", class: 'btn btn-primary' %>
      </div>
    </div> <br>


    <div class="loan-links text-center">
      <%= link_to "Back", loans_path(nil), class: "btn btn-secondary", remote: true %>
    </div>




    <% end %>

  </div>

  <!-- Bootstrap JS and Popper.js (if needed) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    function maskssn(input) {
      let ssn = document.getElementById('user_ssn');
      // SSN masking
      ssn.addEventListener('input', function () {
        let inputValue = ssn.value.replace(/\D/g, ''); // Remove non-numeric characters
        let formattedValue = '';
        if (inputValue.length > 0) {
          // Adjusted regex and substring for xxx-xx-xxxx format
          formattedValue = inputValue.match(/(\d{0,3})(\d{0,2})(\d{0,4})/).slice(1, 4).filter(Boolean).join('-');
        }
        ssn.value = formattedValue;
      });
    }

    // masking input
    function maskincome(input) {
      var value = input.value.replace(/[^0-9.]/g, '');
      value = '$' + value;
      var parts = value.split('.');
      if (parts.length > 1) {
        value = parts[0] + '.' + parts[1].slice(0, 2);
      }
      input.value = value;
    }

    function maskPhoneNumber(input) {
      var value = input.value.replace(/\D/g, '');
      if (value.length > 6) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6) + '-' + value.slice(6, 10);
      } else if (value.length > 3) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6);
      }
      input.value = value;
    }
 
