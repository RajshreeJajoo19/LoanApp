
<body>

    <div class="container-fluid">
        <br>
              <h5 class="text-center">Edit Loan Application</h5>
        <br>

          <%= form_with(model: @loan, url: loans_path, class: 'loan-form-new', data: { remote: true }, method: 'post') do |form| %>
          <br><br>

          <div class="row">
              <div class="col-md-4">
                <div class="field">
                  <%= form.label :'Full Name', class: 'form-label custom-label' %>
                  <%= form.text_field :name, class: 'form-input', id: 'name', placeholder: 'Name' %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="field">
                  <%= form.label :'Email Address', class: 'form-label custom-label' %>
                  <%= form.text_field :email_address, type: 'email', class: 'form-input', id: 'email_address', placeholder: 'name@example.com' %>
                </div>
              </div>

              <div class="col-md-4">
                <div class="field">
                  <%= form.label :'Phone Number', class: 'form-label custom-label' %>
                  <%= form.text_field :phonenumber, class: 'form-input', id: 'phonenumber', placeholder: '555-555-5555', oninput: "maskPhoneNumber(this)" %>
                </div>
              </div>
          </div>

          <div class="row">

              <div class="col-md-4">
                  <div class="field">
                    <%= form.label :'Loan Purpose', class: 'form-label custom-label'  %>
                    <%= form.select :purpose, options_for_select([
                      ['Select', nil],
                      ['Medical Expenses', 'Medical Expenses'],
                      ['Gold', 'Gold'],
                      ['Education', 'Education'],
                      ['Home', 'Home'],
                      ['Vehicle', 'Vehicle']
                    ], selected: @loan.purpose), {}, class: 'form-input' %>
                  </div>
              </div>

          <div class="col-md-4">
          <div class="field">
          <%= form.label :'Loan Amount', class: 'form-label custom-label' %>
          <%= form.text_field :amount, class: 'form-input', id: 'user_amount', placeholder: '$10,000', oninput: "maskincome(this)" %>
          </div>
          </div>

          <div class="col-md-4">
          <div class="field">
          <%= form.label :'Income', class: 'form-label custom-label' %>
          <%= form.text_field :income, class: 'form-input', id: 'user_income', placeholder: '$10,000', oninput: "maskincome(this)" %>
          </div>
          </div>

          </div>

          <div class="row">
              <div class="col-md-4">
                <div class="field">
                <%= form.label :'Social Security Number', class: 'form-label' %>
                <%= form.text_field :ssn, class: 'form-input', placeholder: 'xxx-xx-xxxx', id: 'user_ssn', oninput: "maskssn(this)"%>
                </div>
              </div>
          </div>
          <br><br>

          <div class="actions text-center">
              <%= link_to "Back", loans_path(nil), class: "btn btn-secondary mx-auto", remote: true %>
              <%= form.submit 'Submit Loan Application', class: 'btn btn-primary mx-auto' %>
          </div>

          <% end %>
    </div>
    

</body>

<script>
    function maskssn(input) {
      let ssn = document.getElementById('user_ssn');
      // SSN masking
      ssn.addEventListener('input', function () {
        let inputValue = ssn.value.replace(/\D/g, ''); // Remove non-numeric characters
        let formattedValue = '';
        if (inputValue.length > 0) {
          // Adjusted regex and substring for xxx-xx-xxxx format
          formattedValue = inputValue.match(/(\d{0,3})(\d{0,2})(\d{0,4})/).slice(1, 4).filter(Boolean).join('-');
        }
        ssn.value = formattedValue;
      });
    }

    // masking input
    function maskincome(input) {
      var value = input.value.replace(/[^0-9.]/g, '');
      value = '$' + value;
      var parts = value.split('.');
      if (parts.length > 1) {
        value = parts[0] + '.' + parts[1].slice(0, 2);
      }
      input.value = value;
    }

    function maskPhoneNumber(input) {
      var value = input.value.replace(/\D/g, '');
      if (value.length > 6) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6) + '-' + value.slice(6, 10);
      } else if (value.length > 3) {
        value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6);
      }
      input.value = value;
    }

</script>

