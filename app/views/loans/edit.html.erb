
<body>
                
    <div class="container-fluid">
        
             <%= form_with(model: @loan, local: true, class: 'loan-form-new') do |form| %>
            <br><br>

            <div class="row">
                      <div class="col-md-1"></div>
                      <!-- card 1 -->
                      <div class="col-md-5">
                          <!-- <h5> <u><center> Personal Details </center></u></h5> -->
                            <div class="card1" style="width:35rem;">
                              <div class="card-body">
                                <h5 class="card-title"> Personal Details </h5>
                              
                                  <div class="field">
                                      <!-- <%= form.label :'First Name', class: 'form-label custom-label' %> -->
                                      <%= form.text_field :name, class: 'form-control mb-2', id: 'firstname', placeholder: 'First Name' %>
                                  </div>
                              
                        
                                  <div class="field">
                                      <!-- <%= form.label :'Last Name', class: 'form-label custom-label' %> -->
                                      <%= form.text_field :lastName, class: 'form-control mb-2', id: 'lastname', placeholder: 'Last Name' %>
                                  </div>
                              

                                  <div class="field">
                                    <!-- <%= form.label :'Email Address', class: 'form-label custom-label' %> -->
                                    <%= form.text_field :email_address, type: 'email', class: 'form-control mb-2', id: 'email_address', placeholder: 'name@example.com' %>
                                  </div>
                      
                        
                                  <div class="field">
                                    <!-- <%= form.label :'Phone Number', class: 'form-label custom-label' %> -->
                                    <%= form.text_field :phonenumber, class: 'form-control mb-2', id: 'phonenumber', placeholder: '555-555-5555', oninput: "maskPhoneNumber(this)" %>
                                  </div>
                            
                                  <div class="field">
                                    <!-- <%= form.label :'Date of Birth', class: 'form-label custom-label' %> -->
                                    <%= form.text_field :dateOfBirth, class: 'form-control mb-2', id: 'datepicker', placeholder: 'Date of Birth'%>        
                                      <!-- <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                             -->
                                  </div>


          
                                  <div class="field">
                                    <!-- <%= form.label :'Social Security Number', class: 'form-label' %> -->
                                    <%= form.text_field :ssn, class: 'form-control mb-2', placeholder: 'xxx-xx-xxxx', id: 'user_ssn', oninput: "maskssn(this)"%>
                                  </div>

                          
                                  <div class="field">
                                    <!-- <%= form.label :'Address', class: 'form-label' %> -->
                                    <%= form.text_area :Address, class: 'form-control mb-2', placeholder: 'Address', id: 'user_address'%>
                                  </div>
                              
                                  <div class="field">
                                    <!-- <%= form.label :'city', class: 'form-label' %> -->
                                    <%= form.text_field :city, class: 'form-control mb-2', placeholder: 'City', id: 'user_city'%>
                                  </div>
                              
                                  <div class="field">
                                    <!-- <%= form.label :'state', class: 'form-label' %> -->
                                    <%= form.text_field :state, class: 'form-control mb-2', placeholder: 'State', id: 'user_state'%>
                                  </div>
                              
                                  <div class="field">
                                    <!-- <%= form.label :'pincode', class: 'form-label' %> -->
                                    <%= form.text_field :pincode, class: 'form-control mb-2', placeholder: 'Pincode', id: 'user_pincode'%>
                                  </div>
                               
                                  <div class="field">
                                      <!-- <%= form.label :'Maritial Status', class: 'form-label custom-label' %> -->
                                      <%= form.select :maritalstatus, options_for_select([
                                        ['Marital Status', nil],  
                                        ['Married', 'Married'],
                                        ['Unmarried', 'Unmarried'],
                                        ['Widow', 'Widow'],
                                        ['Divorce', 'Divorce'],
                                        ], selected: @loan.maritalstatus), {}, class: 'form-input' %>
                                  </div>
                            
                                <div class="field">
                                    <!-- <%= form.label :'Dependents', class: 'form-label custom-label' %> -->
                                    <%= form.select :Dependents, options_for_select([
                                      ['Select', nil],  
                                      ['Yes', 'Yes'],
                                      ['No', 'No'],
                                      ], selected: @loan.dependents), {}, class: 'form-input' %>
                                </div>
                          
                                
                              </div>
                            </div>
                      </div> 
                      <!-- card 1 end -->

                      <!-- card 2 -->
                      <div class="col-md-5">          
                        
                        <div class="card1" style="width:35rem;">               
                              <div class="card-body">
                                    <h5 class="card-title"> Employee Details</h5>

                                      <div class="field">
                                        <!-- <%= form.label :'Profession', class: 'form-label custom-label' %> -->
                                        <%= form.text_field :jobtitle, class: 'form-control mb-2', id: 'user_jobtitle', placeholder: 'Profession' %>
                                      </div>
                                              
                                      <div class="field">
                                        <!-- <%= form.label :'Company Name', class: 'form-label custom-label' %> -->
                                        <%= form.text_field :companyname, class: 'form-control mb-2', id: 'user_comapnyname', placeholder: 'Company Name' %>
                                      </div>
                                          
                                      <div class="field">
                                        <!-- <%= form.label :'Company Address', class: 'form-label custom-label' %> -->
                                        <%= form.text_area :companyaddress, class: 'form-control mb-2', id: 'user_companyaddress',  placeholder: 'Company Address'%>
                                      </div>
                        
                                    
                                      <div class="field">
                                        <!-- <%= form.label :'Annual Income', class: 'form-label custom-label' %> -->
                                        <%= form.text_field :income, class: 'form-control mb-2', id: 'user_income', placeholder: '$10,000', oninput: "maskincome(this)" %>
                                      </div>
                                  
                                      <div class="field">
                                        <!-- <%= form.label :'Business Number', class: 'form-label custom-label' %> -->
                                        <%= form.text_field :busiessNumber, class: 'form-control mb-2', id: 'user_businessnumber', placeholder: '555-555-5555', oninput: "maskPhoneNumber(this)" %>
                                      </div>      
                                      
                                      <h5 class="card-title"> Loan Details </h5>
                                      <div class="field">
                                        <!-- <%= form.label :'Loan Purpose', class: 'form-label custom-label' %> -->
                                        <%= form.select :purpose, options_for_select([
                                          ['Purpose', nil],  
                                          ['Medical Expenses', 'Medical Expenses'],
                                          ['Gold', 'Gold'],
                                          ['Education', 'Education'],
                                          ['Home', 'Home'],
                                          ['Vehicle', 'Vehicle']
                                          ], selected: @loan.purpose), {}, class: 'form-input' %>
                                      </div>
                            
                                      <div class="field">
                                        <!-- <%= form.label :'Loan Amount', class: 'form-label custom-label' %> -->
                                        <%= form.text_field :amount, class: 'form-control mb-2', id: 'user_amount', placeholder: '$10,000', oninput: "maskincome(this)" %>
                                      </div>
                              </div>        
                        </div>

                      </div>

                      <div class="col-md-1"></div>

                      <!-- card 2 ends -->

            </div>

            <br><br>
            <div class="actions text-center">
              <%= link_to "Back", loans_path(nil), class: "btn btn-secondary mx-auto all_btn", remote: true %>
              <%= form.submit 'Update', class: 'btn btn-primary mx-auto all_btn' %>
            </div> <br>
          
          <% end %>

    </div>


    <script>
          function maskssn(input) {
            let ssn = document.getElementById('user_ssn');
            // SSN masking
            ssn.addEventListener('input', function () {
              let inputValue = ssn.value.replace(/\D/g, ''); // Remove non-numeric characters
              let formattedValue = '';
              if (inputValue.length > 0) {
                // Adjusted regex and substring for xxx-xx-xxxx format
                formattedValue = inputValue.match(/(\d{0,3})(\d{0,2})(\d{0,4})/).slice(1, 4).filter(Boolean).join('-');
              }
              ssn.value = formattedValue;
            });
          }

          // masking input
          function maskincome(input) {
            var value = input.value.replace(/[^0-9.]/g, '');
            value = '$' + value;
            var parts = value.split('.');
            if (parts.length > 1) {
              value = parts[0] + '.' + parts[1].slice(0, 2);
            }
            input.value = value;
          }

          function maskPhoneNumber(input) {
            var value = input.value.replace(/\D/g, '');
            if (value.length > 6) {
              value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6) + '-' + value.slice(6, 10);
            } else if (value.length > 3) {
              value = '(' + value.slice(0, 3) + ') ' + value.slice(3, 6);
            }
            input.value = value;
          }

          $(document).ready(function(){
              $('#datepicker').datepicker();
          });

    </script>

</body>

</html>
